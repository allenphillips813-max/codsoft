import re
from datetime import datetime

def simple_chatbot():
    print("ChatBot: Hello! I'm your simple chatbot. Type 'bye' to exit.")

    while True:
        user_input = input("You: ").lower()
        if "bye" in user_input:
            print("ChatBot: Goodbye! Have a great day.")
            break
        elif re.search(r'\bhello\b|\bhi\b|\bhey\b', user_input):
            print("ChatBot: Hello! How can I assist you?")
        
        elif "your name" in user_input:
            print("ChatBot: I'm a simple rule-based chatbot.")
        
        elif "time" in user_input:
            now = datetime.now().strftime("%H:%M:%S")
            print(f"ChatBot: The current time is {now}.")
        
        elif "help" in user_input:
            print("ChatBot: I can answer simple questions like 'What is your name?', 'What time is it?', or just say 'hi' to chat!")

        elif "how are you" in user_input:
            print("ChatBot: I'm just a bot, but I'm functioning as expected! :)")

        elif "what language are you using ?" in user_input:
            print("chatbot:I'm using python programming language:)")
            
        else:
            print("ChatBot: I'm not sure how to respond to that. Try asking something else.")
simple_chatbot()
